<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/style.css">
  <title>Football Apparels App</title>
</head>
<body>
  <%- include ('partials/navbar') %>
 
  <div class="container mt-5 pt-5">
    <div class="text-center"><h2>List of products</h2></div>
    <div class="row">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col-md-4 d-flex align-items-stretch">
          <div class="card card-product border-dark mb-4">
            <img src="/images/<%= products[i].image %>" class="card-img-top product-image" alt="<%= products[i].name %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= products[i].name %></h5>
              <p class="card-text mt-auto"><strong>Price: $<%= products[i].price %></strong></p>
              <a href="/product/<%= products[i].id %>" class="btn btn-primary mt-auto w-100">View Product</a>
              <div class="d-flex justify-content-center mt-2 w-100">
                <a href="/editProduct/<%= products[i].id %>" class="btn btn-warning me-2 w-50">Edit Product</a>
                <a href="/deleteProduct/<%= products[i].id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger w-50">Delete Product</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
